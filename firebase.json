{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "package.json",
      "package-lock.json",
      "ts-config.json",
      "emails/**"
    ],
    "redirects": [
      {
        "source": "/request",
        "destination": "/request-course",
        "type": 301
      },
      {
        "source": "/course-request",
        "destination": "/request-course",
        "type": 301
      }
    ],
    "rewrites": [ {
      "source": "/bigben",
      "function": "bigben"
    } ]

  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
